<h2>Sign up</h2>

<div id="sign_up_form">
  <%= simple_form_for( resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div class="row">
    <div class="large-6 columns">
      <%= f.input :first_name, autofocus: true %>
    </div>
    <div class="large-6 columns">
      <%= f.input :last_name %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.input :username %>
    </div>
    <div class="large-6 columns">
      <%= f.input :email %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.input :password %>
    </div>
    <div class="large-6 columns">
      <%= f.input :password_confirmation %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.input :bio, :as => :text, size: "50x80" %>
    </div>
    <div class="large-6 columns">
      <%= f.input :location %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.input :gender, collection: [:male, :female] %>
    </div>
    <div class="large-6 columns">
      <%= f.input :preferred_gender, collection: ["Male","Female","Both"], label: "Looking For" %>
    </div>
  </div>
  <div class="row">
     <div class="large-6 columns">
        <%= f.association :activities, collection: Activity.all(order: 'name')  %>
     </div>
     <div class="large-6 columns">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
  </div>
  <div class="row">
     <div class="large-12 columns">
      <%= f.button :submit, label:  "Sign up", class: "button" %>
    </div>
  </div>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>


  <% end %>
  <%= render "devise/shared/links" %>

</div>


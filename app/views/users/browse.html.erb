<h1>Browse Members</h1>

<div id="search-container">
<%= search_form_for @search do |f| %>
  <%= f.label :gender_cont %>
  <%= f.text_field :gender_cont %>
  <%= f.label :username_cont %>
  <%= f.text_field :username_cont %>
  <%= f.submit %>
<% end %>
</div>
<div id="results">
  <div id="accordion">
    <% @users.each do |user| %>
    <div>
    <span class="members"><%= user.username %></span></br>
    Email: <%=user.email %><br/>
    Gender: <%= user.gender %><br/>
    Location: <%= user.location %><br/>
    Summary: <%= user.bio %><br/>
    Activities:
    <ul class="activities">
      <% user.activities.each do |activity| %>
        &bullet; <li><%= activity.name %></li>
      <% end %>
    </ul>
    </div>
    <% end %>
  </div>
</div>


